{
  "name": "sunscreen-chooser",
  "version": "1.0.0",
  "type": "module",
  "description": "Find your perfect sunscreen based on your preferences",
  "main": "script.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --coverage",
    "validate": "node validate-data.js",
    "validate:full": "npm run validate && npm test",
    "lint": "eslint *.js modules/**/*.js",
    "lint:fix": "eslint *.js modules/**/*.js --fix"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "Chrome >= 90",
    "Firefox >= 88",
    "Edge >= 90",
    "not dead",
    "not op_mini all"
  ],
  "keywords": [
    "sunscreen",
    "spf",
    "skincare",
    "sun-protection"
  ],
  "author": "Joao Vilaca",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "browserslist": "^4.28.1",
    "eslint": "^9.39.2",
    "eslint-plugin-compat": "^6.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.spec.js",
      "**/tests/**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "script.js",
      "quiz.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
